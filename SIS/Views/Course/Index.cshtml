@model List<SIS.Models.Data.Course>
@{
    ViewData["Title"] = "All Courses";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Course Id</th>
                    <th>Course Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = course.CourseId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = course.CourseId }, new { onclick = "return confirm('Are you sure you want to delete this course?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>